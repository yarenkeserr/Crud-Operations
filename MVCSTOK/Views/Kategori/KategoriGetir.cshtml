@model MVCSTOK.Models.Entitiy.kategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
       @Html.LabelFor(m=>m.kategori_id)
       @Html.TextBoxFor(m => m.kategori_id, new { @class = "form-control" })
       <br />
        @Html.LabelFor(m=>m.kategori_adi)
        @Html.TextBoxFor(m=>m.kategori_adi,new { @class="form-control "})
    </div>
    <div>
        <button class="btn btn-warning">Kategori güncelle</button>
    </div>

}

