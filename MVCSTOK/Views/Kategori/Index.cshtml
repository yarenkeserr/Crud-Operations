@using MVCSTOK.Models.Entitiy
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<kategoriler>
@{
    ViewBag.Title = "KateegoriListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    
    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
        <tr>
            <th>@kategori.kategori_id</th>
            <td>@kategori.kategori_adi</td>
            <td>@Html.ActionLink("Sİl", "SIL", new { id = kategori.kategori_id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediginize emin misiniz?')" })</td>
            <td><a href="/Kategori/KategoriGetir/@kategori.kategori_id" class="btn btn-success">GÜNCELLE</a></td>


        </tr>
        }
    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

