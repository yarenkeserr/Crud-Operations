@using MVCSTOK.Models.Entitiy
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Musteri Id</th>
        <th>Musteri Adı</th>
        <th>Musteri Soyadı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
        <tr>
            <th>@musteri.musteri_id</th>
            <td>@musteri.musteri_adi</td>
            <td>@musteri.musteri_soyad</td>
            <td>@Html.ActionLink("SİL", "SIL", new { id = musteri.musteri_id }, new { @class = "btn btn-danger", onclick = "return confirm('silmek istediginize emin misiniz?')" })</td>
            <td> <a href="/Musteri/MusteriGetir/@musteri.musteri_id" class="btn btn-success"> GÜNCELLE</a></td>


        </tr>


        }

    </tbody>


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Musteri/YeniMusteri/" class="btn btn-primary"> YENİ MÜŞTERİ EKLE</a>


